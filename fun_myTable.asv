function [hEdit] = fun_myTable(parent, nR, columnRatio, text)

junk = 1+sum(columnRatio);
wCell = [1 columnRatio]/junk;
nC = length(columnRatio);
hCell = 1/(nR+1);
junk = cumsum(wCell);
xP = [0 junk(1:end-1)];
yP = hCell*nR:-hCell:0;

% all cells
for iR = 1:nR+1
    for iC = 1:nC+1
        hET(iR, iC) = uipanel('parent', parent,...
                                'Unit', 'Normalized',...
                                'Position', [xP(iC) yP(iR) wCell(iC) hCell],...
                                'Units',                     'normalized', ...
                                'visible',                      'on', ...
                                'ForegroundColor',       'k',...
                                'BackgroundColor',       'k', ...
                                'HighlightColor',          'w',...
                                'ShadowColor',            'k');
    end
end

% first row
for iC = 1:nC
    hText.FirstRow(iC) = uicontrol('parent', hET(1, iC), ...
                                'Style', 'text',...
                                'String', text.FirstRow{iC},...
                                'Unit', 'Normalized',...
                                'Position', [0 0 1 1], ...
                                'FontSize', 12, ...
                                'FontWeight', 'bold', ...
                                'BackgroundColor', 'k',...
                                'ForegroundColor', 'k',...
                                'String', 'dx', ...
                                'Visible', 'on');
end

% first column
for iR = 1:nR
    hText.FirsColumn(iR) = uicontrol('parent', hET(iR+1, 1), ...
                                'Style', 'text',...
                                'String', text.FirstRow{iC},...
                                'Unit', 'Normalized',...
                                'Position', [0 0 1 1], ...
                                'FontSize', 12, ...
                                'FontWeight', 'bold', ...
                                'BackgroundColor', 'k',...
                                'ForegroundColor', 'w',...
                                'String', 'dx', ...
                                'Visible', 'on');
end

% data
for iC = 1:nC
    for iR = 1:nR
        hEdit(iR, iC) = uicontrol('parent', hET(iR+1, iC+1), ...
                                'Style', 'edit',...
                                'Unit', 'Normalized',...
                                'Position', [0 0 1 1],...
                                'FontWeight', 'bold', ...
                                'BackgroundColor', 'k',...
                                'ForegroundColor', 'g',...
                                'String', '3.5', ...
                                'Visible', 'on');

    end
end